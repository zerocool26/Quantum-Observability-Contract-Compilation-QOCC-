{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QOCC Trace Span (single JSON-Lines entry)",
  "type": "object",
  "required": [
    "trace_id",
    "span_id",
    "name",
    "start_time"
  ],
  "properties": {
    "trace_id": {
      "type": "string"
    },
    "span_id": {
      "type": "string"
    },
    "parent_span_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "name": {
      "type": "string"
    },
    "start_time": {
      "type": "string"
    },
    "end_time": {
      "type": [
        "string",
        "null"
      ]
    },
    "attributes": {
      "type": "object"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "ERROR",
        "UNSET"
      ]
    }
  },
  "additionalProperties": true
}
