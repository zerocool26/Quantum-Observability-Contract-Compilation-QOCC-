{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QOCC Bundle Signature",
  "type": "object",
  "required": [
    "algorithm",
    "signer",
    "timestamp",
    "manifest_hash",
    "signature"
  ],
  "properties": {
    "algorithm": {
      "type": "string",
      "enum": [
        "ed25519"
      ]
    },
    "signer": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "manifest_hash": {
      "type": "string"
    },
    "signature": {
      "type": "string"
    },
    "public_key_fingerprint": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": true
}
