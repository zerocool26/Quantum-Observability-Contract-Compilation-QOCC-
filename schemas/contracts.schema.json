{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QOCC Contract Specifications",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "name",
      "type"
    ],
    "properties": {
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": [
          "observable",
          "distribution",
          "clifford",
          "exact",
          "cost",
          "qec",
          "zne",
          "qpt",
          "topology_violations"
        ]
      },
      "spec": {
        "type": "object"
      },
      "tolerances": {
        "type": "object"
      },
      "confidence": {
        "type": "object"
      },
      "resource_budget": {
        "type": "object"
      }
    },
    "additionalProperties": true
  }
}
